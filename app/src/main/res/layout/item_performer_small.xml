<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_inner_soft"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <!-- Imagen del artista -->
    <ImageView
        android:id="@+id/imgPerformer"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/rounded_album_cover"
        android:clipToOutline="true"
        android:contentDescription="Imagen del artista"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_broken_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Nombre del artista -->
    <TextView
        android:id="@+id/txtPerformerName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Nombre del artista"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgPerformer"
        app:layout_constraintTop_toTopOf="@id/imgPerformer"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción corta -->
    <TextView
        android:id="@+id/txtPerformerDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Descripción del artista"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imgPerformer"
        app:layout_constraintTop_toBottomOf="@id/txtPerformerName"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>