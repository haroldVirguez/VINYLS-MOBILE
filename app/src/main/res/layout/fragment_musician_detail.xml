<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="90dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Imagen + overlay -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_album_cover"
                android:clipToOutline="true"
                android:outlineProvider="background">

                <ImageView
                    android:id="@+id/imgArtistPhoto"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="Foto del artista"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#66000000"
                    android:orientation="vertical"
                    android:padding="12dp"
                    app:layout_constraintBottom_toBottomOf="@id/imgArtistPhoto"
                    app:layout_constraintEnd_toEndOf="@id/imgArtistPhoto"
                    app:layout_constraintStart_toStartOf="@id/imgArtistPhoto">

                    <TextView
                        android:id="@+id/txtArtistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre del artista"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtBirthDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nació en 1960"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- Caja de descripción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/vinyls_card_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txtDescriptionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Descripción"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtArtistDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:text="Descripción del artista"
                    android:textColor="@color/text_secondary"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Caja de álbumes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/vinyls_card_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txtAlbumsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="Álbumes"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/albumsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerPadding="4dp"
                    android:orientation="vertical" />
            </LinearLayout>

            <!-- Caja de premios -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/vinyls_card_bg"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/txtPrizesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="Premios"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/prizesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:dividerPadding="4dp"
                    android:orientation="vertical" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>